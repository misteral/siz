

<%= simple_form_for @doc, :html => { :class => 'form-horizontal' } do |f| %>
 <fieldset>
   <legend><%= controller.action_name.capitalize %> / Docs</legend>

    <% if f.error_notification %>
         <div class="alert alert-error fade in">
           <a class="close" data-dismiss="alert" href="#">&times;</a>
           <%= f.error_notification %>
     </div>
    <% end %>

   <div class="form-inputs">
     <%= f.input :name %>
     <%= f.input :utv %>
     <%= f.association :sklad %>
     <% if @tip_docum != '1' %>
       <%= f.association :rabotnik, :label_method => :rabotnik_fio_tn %>
     <% end  %>


     <%= f.association :tip_doc %>
     <table class="table table-striped table-bordered table-condensed">
        <thead>
        <tr>
          <th>Номер</th>
          <th>СИЗ</th>
          <th>ИН</th>
          <th>Размер</th>
          <th>Размер головы</th>
          <th>Размер обуви</th>
          <th>Рост</th>
          <th>Количество</th>
          <th>Действия</th>
        </tr>
        </thead>
        <tbody id="target">
             <%= f.simple_fields_for :doc_tables do |table| %>
               <%= render 'doc_table_fields', {:f => table} %>
             <% end %>
        </tbody>
      </table>
     <div id="blabla">
     <%= link_to_add_association  'Добавить строку', f, :doc_tables , :class => 'btn'%>
     </div>
   </div>

   <div class="form-actions">
   <%= f.button :submit, :class => 'btn btn-primary' %>
    <%= link_to 'Отмена', docs_path, :class => 'btn' %>
  </div>

 </fieldset>

<% end %>
<h1>Sizs</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @sizs.each do |siz| %>
      <tr>
        <td><%= siz.id %></td>
        <td><%= link_to siz.name, siz_path(siz) %></td>
        <td><%= siz.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_siz_path(siz), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', siz_path(siz), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_siz_path, :class => 'btn btn-primary' %>

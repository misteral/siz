<h1>Документы</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Номер</th>
      <th>Имя</th>
      <th>Создано</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @docs.each do |doc| %>
      <tr>
        <td><%= doc.id %></td>
        <td><%= link_to doc.name, doc_path(doc) %></td>
        <td><%= I18n.l(doc.created_at) %></td>
        <td>
          <%= link_to 'Редактировать', edit_doc_path(doc), :class => 'btn btn-mini' %>
          <%= link_to 'Удалить', doc_path(doc), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>



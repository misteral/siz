<% @docs.each do |doc| %>
  <tr>
    <td><%= doc.name %></td>
    <td><%= doc.utv %></td>
    <td><%= doc.sklad %></td>
    <td><%= doc.postavshik %></td>
    <td><%= doc.rabotnik %></td>
    <td><%= link_to 'Show', doc %></td>
    <td><%= link_to 'Edit', edit_doc_path(doc) %></td>
    <td><%= link_to 'Destroy', doc, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


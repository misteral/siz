<h1>Перечень документов</h1>

<p>
  <b>Name</b><br>
  <%= @doc.name %>
</p>

<p>
  <b>Utv</b><br>
  <%= @doc.utv %>
</p>

<p>
  <b>Sklad</b><br>
  <%= @doc.sklad_id %>
</p>

<p>
  <b>Postavshik</b><br>
  <%= @doc.postavshik_id %>
</p>

<p>
  <b>Rabotnik</b><br>
  <%= @doc.rabotnik_id %>
</p>

<p>
  <b>Tip doc</b><br>
  <%= @doc.tip_doc_id %>
</p>

<h2>Данные по документам</h2>
<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th>Номер</th>
    <th>Средство измерения</th>
    <th>Размер</th>
    <th>Размер головы</th>
    <th>Размер обуви</th>
    <th>Рост</th>
    <th>Количество</th>
  </tr>
  </thead>
  <tbody>
  <%= i=1 %>
  <% @doc.doc_tables.each do |tbl| %>
  <tr>
    <td><%= i %></td>
    <%= ++i %>
    <td>Средство измернеия</td>
    <td>Размер</td>
    <td>Размер головы</td>
    <td>Размер обуви</td>
    <td>Рост</td>
    <td><%= tbl.kol %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to 'Back', docs_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_doc_path(@doc), :class => 'btn' %>
  <%= link_to 'Delete', doc_path(@doc), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>

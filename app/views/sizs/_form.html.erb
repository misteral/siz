<%= form_for @siz, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> /Siz</legend>

    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :tip_so_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :tip_so_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :vid_so_id, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :vid_so_id, :class => 'number_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :sert, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :sert, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :nom, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :nom, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', sizs_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

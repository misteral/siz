<h1>Справочник работники</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>ФИО</th>
      <th>Создан</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @rabotniks.each do |rabotnik| %>
      <tr>
        <td><%= rabotnik.id %></td>
        <td><%= link_to rabotnik.fam+" "+rabotnik.imy+" "+rabotnik.otch, rabotnik_path(rabotnik) %></td>
        <td><%= rabotnik.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_rabotnik_path(rabotnik), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', rabotnik_path(rabotnik), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_rabotnik_path, :class => 'btn btn-primary' %>
